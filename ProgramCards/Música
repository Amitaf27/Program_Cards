public class Music {


   Clip clip;
   
   public void setFile(String fileName){
     
     try{
       
       File file = new File(fileName);
       AudioInputStream sound = new AudioSystem.getAudioInputStream(file);
       clip = AudioSystem.getClip();
       clip.open(sound);
         
       }
       
       
     } catch (Exception e){
       
       
      
     }
     
     
     public void play(){
       
       clip.setFramePosition(0);
       clip.start();      
     }
     public void loop(){
       
       clip.loop(LOOP_CONTINUOUSLY);
     }
     public void stop(){
       
       
       clip.stop();
       clip.close();
     }
     
     
     
   }
}
